datasource db {
   url      = env("DATABASE_URL")
   provider = "postgresql"
}

generator client {
   provider = "prisma-client-js"
}

model ItemType {
   id   String @id @default(cuid())
   name String @unique

   Item Item[]
}

model Item {
   id           String   @id @default(cuid())
   createdAt    DateTime @default(now())
   updatedAt    DateTime @updatedAt
   name         String
   price        Float
   description  String
   img          String
   type         ItemType @relation(fields: [typeId], references: [id])
   typeId       String
   commentsList Review[]
   action       Int?
}

model Review {
   id        String   @id @default(cuid())
   createdAt DateTime @default(now())
   userName  String
   text      String
   stars     Int
   Item      Item?    @relation(fields: [itemId], references: [id])
   itemId    String?
}
